    //        "19": "images/icon19.png",
    //        "16": "images/icon16.png"
    //        //"38": "images/icon38.png"
    //    },
    //    "default_title": "测试插件",
    //    "default_popup": "popup.html"
    //},
          
	"permissions": [
        //"notifications", 
        //"fullscreen",
        "storage",
        "tabs",
        //"webNavigation",
        "alarms",
        "activeTab",
        "background",
        "activeTab",
        "webRequest",
        "webRequestBlocking",
        "*://*.com/*"
    ]
}
