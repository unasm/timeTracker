{
	"manifest_version": 2,
	"name": "时间的魔术师",
	"version": "1.0",
    "default_locale" : "zh_CN", 
	"description": "记录浏览的网站次数以及时间，并且禁止访问黑名单中网址",
	"icons": {
        "128": "images/icon128.png",
        "48": "images/icon48.png",
        "38": "images/icon38.png",
        "19": "images/icon19.png",
        "16": "images/icon16.png"
        //"19" : "images/icon19.png"
    },
    
    "background" : {
        //"page" : "background.html",
        "scripts" : [
            //"js/controller/visitedController.js",
            "js/model/basemodel.js",
            "js/util/util.js",
            "js/store.js",
            "js/alarms.js",
            "js/config.js",
            "js/tabs.js",
            "js/model/logModel.js",
            //"js/model/visitedModel.js",
            "js/model/blackModel.js",
            "background.js"
        ],
        "persistent" : true
    },
	"browser_action": {
		"default_icon": "images/icon19.png",
        "default_title" : "everyone need to die"
	},
    //"background": {
    //    "page": "popup.html"
